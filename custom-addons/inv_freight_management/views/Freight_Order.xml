<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Main menu item for Freight Orders -->
        <menuitem id="menu_inv_freightorder" name="Freight Management" sequence="10"/>

        <!-- Submenu items for related models -->


        <record id="view_inv_freightorder_kanban" model="ir.ui.view">
            <field name="name">inv.freightorder.kanban</field>
            <field name="model">inv.freightorder</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <!-- Define the content of the Kanban cards -->
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_title">
                                    <field name="name"/>
                                </div>
                                <ul>
                                    <li>
                                        <field name="order_date"/>
                                    </li>
                                    <li>
                                        <field name="tracking_no"/>
                                    </li>
                                    <li>
                                        <field name="shipper_id"/>
                                    </li>
                                    <li>
                                        <field name="destination_port_id"/>
                                    </li>
                                </ul>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_inv_freightorder_tree" model="ir.ui.view">
            <field name="name">inv.freightorder.tree</field>
            <field name="model">inv.freightorder</field>
            <field name="arch" type="xml">
                <tree string="Freight Order">
                    <field name="name"/>
                    <field name="order_date"/>
                    <field name="tracking_no"/>
                    <field name="shipper_id"/>
                    <field name="destination_port_id"/>
                    <field name="consignment_type_id" optional="hide"/>
                    <field name="mode_id"/>
                    <field name="company_id" optional="hide"/>
                    <field name="shipping_date"/>
                </tree>

            </field>
        </record>

        <record id="view_inv_freightorder_form" model="ir.ui.view">
            <field name="name">inv.freightorder.form</field>
            <field name="model">inv.freightorder</field>
            <field name="arch" type="xml">
                <form string="Freight Order" __validate__="1">
                    <header>
                        <!-- Reference the 'state' field instead of 'status_ids' -->
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                                invisible="is_confirmed"/>
                        <field name="status_id" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Order Id"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="order_date" widget="date"/>
                                <field name="tracking_no"/>
                                <field name="term"/>
                                <field name="shipper_id"
                                />
                                <field name="receiver_id"/>
                                <field name="bill_to_id"/>
                                <field name="notify_party_id"/>
                                <field name="origin_country_id"/>
                                <field name="origin_port_id" domain="[('country_id', '=', origin_country_id)]"
                                       readonly="origin_country_id == False"/>
                                <field name="is_confirmed" invisible="1"/>

                            </group>
                            <group>

                                <field name="destination_country_id"/>
                                <field name="destination_port_id" domain="[('country_id', '=', destination_country_id)]"
                                       readonly="destination_country_id == False"/>
                                <field name="consignment_type_id"/>
                                <field name="transport_type_id"/>
                                <field name="mode_id"/>
                                <field name="company_id"/>
                                <field name="shipping_date"/>
                                <field name="ready_date"/>
                                <field name="status_id"/>

                            </group>
                        </group>
                        <notebook>

<page string="Packages" name="packages_tab">
  <field name="package_ids" widget="one2many_list">
    <tree editable="bottom">
      <field name="package_type_id" attributes="{'column_invisible': False, 'string': 'Package Type'}" width="150" options="{'no_open': True}" />
      <field name="package_count" attributes="{'column_invisible': False, 'string': 'Package Count'}" width="100" options="{'no_open': True}" />
      <field name="weight_uom_id" attributes="{'column_invisible': False, 'string': 'Weight Unit'}" width="100" options="{'no_open': True}" />
      <field name="unit_of_volume" attributes="{'column_invisible': False, 'string': 'Volume'}" width="100" options="{'no_open': True}" />
      <field name="volume_uom_id" attributes="{'column_invisible': False, 'string': 'Volume Unit'}" width="100" options="{'no_open': True}" />
      <field name="product_description" attributes="{'column_invisible': False, 'string': 'Product Description'}" width="200" options="{'no_open': True}" />
    </tree>
  </field>
</page>                            <page name="internal_notes" string="Internal Notes">
                                <field name="comment" placeholder="Internal notes..."/>
                            </page>


                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_inv_freightorder_search" model="ir.ui.view">
            <field name="name">inv.freightorder.search</field>
            <field name="model">inv.freightorder</field>
            <field name="arch" type="xml">
                <search>
                    <!-- Define your search view here -->
                    <!-- Example: -->
                    <field name="order_date"/>
                    <field name="tracking_no"/>
                    <field name="shipper_id"/>
                    <field name="origin_port_id"/>
                    <field name="destination_port_id"/>
                    <field name="shipping_date"/>
                </search>
            </field>
        </record>


        <record id="action_inv_freightorder" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inv.freightorder</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first order!
                </p>
            </field>
        </record>


        <menuitem id="menu_inv_freightorder_main" name="Orders" parent="menu_inv_freightorder"
                  action="action_inv_freightorder" sequence="1"/>
    </data>
</odoo>
