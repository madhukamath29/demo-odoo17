<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="freight_order_page_template" name="Freight Order Form">
        <t t-call="website.layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <h2>Submit Freight Order</h2>
                        <form action="/submit_freight_order" method="post">
                            <!-- Add your form fields here -->
                            <div class="form-group">
                                <label for="name">Name:</label>
                                <input type="text" class="form-control" id="name" name="name" required="true"/>
                            </div>
                            <div class="form-group">
                                <label for="order_date">Order Date:</label>
                                <input type="date" class="form-control" id="order_date" name="order_date" required="true"/>
                            </div>
                            <div class="form-group">
                                <label for="ready_date">Ready Date:</label>
                                <input type="date" class="form-control" id="ready_date" name="ready_date"/>
                            </div>
                            <div class="form-group">
                                <label for="tracking_no">Tracking No:</label>
                                <input type="text" class="form-control" id="tracking_no" name="tracking_no"/>
                            </div>
                            <div class="form-group">
                                <label for="term">Term:</label>
                                <input type="text" class="form-control" id="term" name="term"/>
                            </div>
                            <div class="form-group">
                                <label for="shipper_id">Shipper:</label>
                                <select class="form-control" id="shipper_id" name="shipper_id">
                                    <t t-foreach="shipper_ids" t-as="shipper">
                                        <option t-att-value="shipper.id"><t t-esc="shipper.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="receiver_id">Receiver:</label>
                                <select class="form-control" id="receiver_id" name="receiver_id">
                                    <t t-foreach="receiver_ids" t-as="receiver">
                                        <option t-att-value="receiver.id"><t t-esc="receiver.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="bill_to_id">Bill To:</label>
                                <select class="form-control" id="bill_to_id" name="bill_to_id">
                                    <t t-foreach="bill_to_ids" t-as="bill_to">
                                        <option t-att-value="bill_to.id"><t t-esc="bill_to.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="notify_party_id">Notify Party:</label>
                                <select class="form-control" id="notify_party_id" name="notify_party_id">
                                    <t t-foreach="notify_party_ids" t-as="notify_party">
                                        <option t-att-value="notify_party.id"><t t-esc="notify_party.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="origin_port_id">Origin Port:</label>
                                <select class="form-control" id="origin_port_id" name="origin_port_id">
                                    <t t-foreach="origin_port_ids" t-as="origin_port">
                                        <option t-att-value="origin_port.id"><t t-esc="origin_port.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="destination_port_id">Destination Port:</label>
                                <select class="form-control" id="destination_port_id" name="destination_port_id">
                                    <t t-foreach="destination_port_ids" t-as="destination_port">
                                        <option t-att-value="destination_port.id"><t t-esc="destination_port.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="consignment_type_id">Consignment Type:</label>
                                <select class="form-control" id="consignment_type_id" name="consignment_type_id">
                                    <t t-foreach="consignment_type_ids" t-as="consignment_type">
                                        <option t-att-value="consignment_type.id"><t t-esc="consignment_type.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="transport_type_id">Transport Type:</label>
                                <select class="form-control" id="transport_type_id" name="transport_type_id">
                                    <t t-foreach="transport_type_ids" t-as="transport_type">
                                        <option t-att-value="transport_type.id"><t t-esc="transport_type.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="mode_id">Mode:</label>
                                <select class="form-control" id="mode_id" name="mode_id">
                                    <t t-foreach="mode_ids" t-as="mode">
                                        <option t-att-value="mode.id"><t t-esc="mode.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="company_id">Company:</label>
                                <select class="form-control" id="company_id" name="company_id">
                                    <t t-foreach="company_ids" t-as="company">
                                        <option t-att-value="company.id"><t t-esc="company.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="shipping_date">Shipping Date:</label>
                                <input type="date" class="form-control" id="shipping_date" name="shipping_date"/>
                            </div>
                            <div class="form-group">
                                <label for="status_id">Status:</label>
                                <select class="form-control" id="status_id" name="status_id">
                                    <t t-foreach="status_ids" t-as="status">
                                        <option t-att-value="status.id"><t t-esc="status.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="notes">Notes:</label>
                                <textarea class="form-control" id="notes" name="notes"> </textarea>
                            </div>
                            <!-- Add more form fields as needed -->
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Thank You Page -->
    <template id="thank_you_page" name="Thank You Page">
        <t t-call="website.layout">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <h2>Thank You for Your Order!</h2>
                        <p>Your order has been successfully placed.</p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
