                    <field name="customs_code"/>
                    <field name="supplier_code"/>
                    <field name="ccc_code"/>
                </field>
<xpath expr="//span[@name='address_name']" position="before">
        <field name="gst_no" string="GST No" />
        <field name="atf_no" />
