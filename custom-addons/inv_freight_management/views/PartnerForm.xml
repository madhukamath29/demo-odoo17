<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="category_id" position="after">
                    <field name="user_category" widget="selection"/>  <!-- Add user_category field -->
                    <field name="customs_code"/>
                    <field name="supplier_code"/>
                    <field name="ccc_code"/>
                </field>
                <field name="vat" position="after">
                    <field name="gst_no"/>
                    <field name="atf_no"/>
                    <field name="company_no"/>
                    <field name="cus_code" string="Customer Code"/>
                    <field name="freeze" widget="selection"/>
                    <field name="overseas" widget="selection"/>
                    <field name="local_wh" widget="selection"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
