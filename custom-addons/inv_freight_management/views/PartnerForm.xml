<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//span[@name='address_name']" position="before">
                    <field name="customer" string="CustomerY/N" invisible="1"/>
                    <field name="user_category" widget="many2many_tags"/>
                    <field name="cus_code" invisible="not(customer == 'yes')" required="1"/>
                </xpath>
                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//notebook" position="before">
                    <group>
                        <!-- Insert your new fields here -->
                        <group>
                            <field name="overseas" string="Overseas" widget="selection"
                                   invisible="not(customer == 'yes')"/>
                            <field name="local_wh" string="Local Warehouse" widget="selection"
                                   invisible="not(customer == 'yes')"/>
                            <field name="customs_y_n" invisible="not(customer == 'yes')"/>
                            <field name="company_no" string="Company No"/>
                            <field name="atf_no" string="ATF No"/>
                        </group>
                        <group>
                            <field name="supplier_code" readonly="not(overseas == 'yes')"
                                   invisible="not(customer == 'yes')"/>
                            <field name="ccc_code" readonly="not( local_wh == 'yes')"
                                   invisible="not(customer == 'yes')"/>
                            <field name="customs_code" readonly="not(customs_y_n == 'yes')"
                                   invisible="not(customer == 'yes')"/>
                            <field name="gst_no" string="GST No"/>
                            <field name="freeze" string="Freeze" required="1"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
