<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_quotation" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.external_layout">
                <div class="page-break">
                    <div class="custom-content">
                        <div class="mt-4">
                            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                            <h2 class="mt-4" style="text-align: center; color: #000080; font-weight: bold;">Request for
                                Purchase Quotation
                                <!--                                <span t-field="o.name"/>-->
                            </h2>
                        </div>
                        <div class="page">
                            <div class="oe_structure"/>
                        </div>
                        <hr style="border: 3px solid grey; width: 100%;"/>
                        <div id="informations" class="row mt-4 mb32">
                            <t t-if="o.state in ['purchase','done'] and o.date_approve" class="col-3 bm-2">
                                <strong style="color: #000000; font-weight:bold">DATE:</strong>
                                <span t-field="o.date_approve" t-options='{"widget": "date"}' class="m-0"
                                      style="color: #686868; font-weight: bold;"></span>
                            </t>
                            <br/>
                            <t t-if="o.state in ['purchase', 'done']" class="col-3 bm-2">
                                <strong style="color: #000000; font-weight:bold">PURCHASE ORDER NO:</strong>
                                <strong style="color: #686868; font-weight:bold">
                                    <span t-field="o.name" class="m-0"/>
                                </strong>
                            </t>
                            <br/>
                            <t class="col-3 bm-2">
                                <strong style="color: #000000; font-weight:bold">DELIVER TO:</strong>
                                <strong style="color: #686868; font-weight:bold">
                                    <span t-field="o.company_id.name"/>
                                    <br/>
                                    <span style="padding-left:75px;" t-field="o.company_id.street"/>
                                    <br/>
                                    <span style="padding-left:75px;" t-field="o.company_id.city"/>
                                </strong>
                            </t>
                            <br/>
                            <t class="col-3 bm-2">
                                <strong style="color: #000000; font-weight:bold">VENDOR DETAILS:</strong>
                                <strong style="color: #686868; font-weight:bold">
                                    <span t-field="o.partner_id.name"/>
                                    <br/>
                                    <t t-if="o.partner_id.street or o.partner_id.street2">
                                        <span t-if="o.partner_id.street"
                                              style="padding-bottom: 2px; padding-left:75px;"
                                              t-field="o.partner_id.street"></span>
                                        <span t-if="o.partner_id.street2"
                                              style="padding-left: 2px; padding-bottom: 2px;"
                                              t-field="o.partner_id.street2"></span>
                                        <br/>
                                    </t>
                                    <t t-if="o.partner_id.city or o.partner_id.state_id">
                                        <span t-if="o.partner_id.city"
                                              style="padding-bottom: 2px; padding-left:75px;"
                                              t-field="o.partner_id.city"></span>
                                        <span t-if="o.partner_id.state_id"
                                              style="padding-left: 2px;"
                                              t-field="o.partner_id.state_id"></span>
                                        <br/>
                                    </t>
                                    <t t-if="o.partner_id.zip or o.partner_id.phone">
                                        <span t-if="o.partner_id.zip" style="padding-left: 75px;"
                                              t-field="o.partner_id.zip"></span>
                                        <span t-if="o.partner_id.phone" style="padding: 2px;"
                                              t-field="o.partner_id.phone"></span>
                                        <br/>
                                    </t>
                                    <t t-if="o.partner_id.mobile">
                                        <span style="padding-bottom: 2px;padding-left:75px;"
                                              t-field="o.partner_id.mobile"></span>
                                    </t>
                                </strong>
                            </t>

                        </div>

                        <table class="table table-sm mt-4">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_description">
                                        <strong>Description</strong>
                                    </th>
                                    <th name="th_expected_date" class="text-center">
                                        <strong>Expected Date</strong>
                                    </th>
                                    <th name="th_quantity" class="text-end">
                                        <strong>Qty</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.order_line" t-as="order_line">
                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if order_line.display_type == 'line_section' else 'fst-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                                        <t t-if="not order_line.display_type">
                                            <td id="product">
                                                <span t-field="order_line.name"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="order_line.date_planned"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="order_line.product_qty"/>
                                                <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                                <span t-if="order_line.product_packaging_id">
                                                    (
                                                    <span t-field="order_line.product_packaging_qty"
                                                          t-options='{"widget": "integer"}'/>
                                                    <span t-field="order_line.product_packaging_id"/>)
                                                </span>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td colspan="99" id="section">
                                                <span t-field="order_line.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div style="margin-top: 160px; text-align: center;">
                            <p>
                                <strong style="font-size: larger; color:#000080; font-family: 'YourPreferredFont', sans-serif;">
                                    AUTHORIZED SIGNATURE
                                </strong>
                            </p>
                        </div>

                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>

