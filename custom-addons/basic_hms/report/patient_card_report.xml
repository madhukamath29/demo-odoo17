<?xml version="1.0" encoding="utf-8"?>
<openerp>
		<template id="report_patient_card_document">
        <t t-call="web.external_layout">
					<div class="page">
                <div class="oe_structure"/>
						<div>
                    <h3 class="text-center">
                        <strong>PATIENT CARD</strong>
                    </h3>
                </div>
                <br/>
                <br/>
                <br/>

                <table class="table table-condensed">
									<tr>
                        <th style="border: 0px;" class="text-left">Patient ID:
                            <span style="font-weight:normal;" t-field="o.name"/>
                        </th>
                        <th style="border: 0px;" class="text-left">Title:
                            <span style="font-weight:normal;" t-field="o.patient_id.title"/>
                        </th>
                        <th style="border: 0px;" class="text-left">Name:
                            <span style="font-weight:normal;" t-field="o.patient_id.name"/>
                        </th>
                    </tr>

                    <tr>
                        <th style="border: 0px;" class="text-left">Gender:
                            <span style="font-weight:normal;" t-field="o.sex"/>
                        </th>
                        <th style="border: 0px;" class="text-left">Date of Birth:
                            <span style="font-weight:normal;" t-field="o.date_of_birth"/>
                        </th>
                        <th style="border: 0px;" class="text-left">Age:
                            <span style="font-weight:normal;" t-field="o.age"/>
                        </th>
                    </tr>

                    <tr>
                        <th style="border: 0px;" class="text-left">Blood Group:
                            <span style="font-weight:normal;" t-field="o.blood_type"/>
                        </th>
                        <th style="border: 0px;" class="text-left">Address:
                            <span style="font-weight:normal;"
													t-out="'%s' % o.patient_id.street if  o.patient_id.street  else ''" />
                            <span style="font-weight:normal;"
													t-out="'%s' %  o.patient_id.street2 if  o.patient_id.street2  else ''" />
                            <span style="font-weight:normal;"
													t-out="'%s' %  o.patient_id.country_id.name if o.patient_id.country_id.name  else ''" />
                            <span style="font-weight:normal;"
													t-out="'%s' %  o.patient_id.state_id.name if  o.patient_id.state_id.name  else ''" />
                        </th>
                        <th style="border: 0px;" class="text-left">Phone No:
                            <span style="font-weight:normal;" t-field="o.mobile"/>
                        </th>
									</tr>
							</table>
						</div>
			</t>
		</template>

		<template id="report_patient_card">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="basic_hms.report_patient_card_document"
						t-lang="o.patient_id.lang" />
				</t>
			</t>
		</template>
</openerp>